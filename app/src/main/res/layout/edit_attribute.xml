<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/attribute_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="attribute name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <Button
        android:padding="0dp"
        android:id="@+id/attribute_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/attribute_adjust_button_size"
        android:minHeight="@dimen/attribute_adjust_button_size"
        android:width="@dimen/attribute_adjust_button_size"
        android:height="@dimen/attribute_adjust_button_size"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="-"/>

    <TextView
        android:id="@+id/attribute_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="0"/>

    <Button
        android:id="@+id/attribute_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/attribute_adjust_button_size"
        android:minHeight="@dimen/attribute_adjust_button_size"
        android:width="@dimen/attribute_adjust_button_size"
        android:height="@dimen/attribute_adjust_button_size"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="24sp"
        android:text="+"/>
</LinearLayout>